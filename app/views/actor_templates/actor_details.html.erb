<h1>
  Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%= @the_actor.id %>" class="btn btn-block btn-outline-secondary">
  Delete actor
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>

  <dt>
    Image
  </dt>
  <dd>
    <img src="http://robohash.org/<%= @the_actor.id %>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
   <%= time_ago_in_words(@the_actor.created_at) %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %>
  </dd>
</dl>

<h2>Filmography</h2>


<table border="1">
 <tr>
      <th>
        Title
      </th>

      <th>
        year
      </th>

      <th>
        Director
      </th>

      <th>
        Character name
      </th>

      <th>
      </th>
    </tr>

  <% @filmography.each do |a_film| %>
    <tr>
      <td>
        <%# a = Movie.where({ :id => a_film.movie_id }).at(0) %>
        <%#= a.title %>
        <%= a_film.movie.title %>
      </td>
      <td>
        <%# b = Movie.where({ :id => a_film.movie_id }).at(0) %>
        <%#= b.year %>
        <%= a_film.movie.year %>
      </td>
      <td>
        <%# d = Director.where({ :id => a_film.movie_id }).at(0) %>
        <%#= d.name %>
        <%= a_film.movie.director.name %>
      </td>
      <td>
        <%= a_film.name %>
      </td>
      <td>
        <a href="/movies/<%= a_film.movie_id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>
